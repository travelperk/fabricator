{
  "name": "@travelperksl/fabricator",
  "version": "0.0.0-development",
  "description": "Fabricate objects for your tests",
  "keywords": [
    "fabricator",
    "fabrication",
    "fabricate",
    "testing"
  ],
  "main": "dist/fabricator.js",
  "scripts": {
    "test": "jest --coverage",
    "build": "babel src -d dist",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "semantic-release",
    "prettier": "prettier",
    "cm": "npx git-cz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/travelperk/fabricator.git"
  },
  "bugs": {
    "url": "https://github.com/travelperk/fabricator/issues"
  },
  "homepage": "https://github.com/travelperk/fabricator#readme",
  "devDependencies": {
    "@babel/cli": "7.4.4",
    "@babel/core": "7.4.5",
    "@babel/preset-env": "7.4.5",
    "babel-jest": "24.8.0",
    "husky": "2.3.0",
    "jest": "24.8.0",
    "lint-staged": "8.1.7",
    "prettier": "1.17.1",
    "semantic-release": "15.13.12",
    "travis-deploy-once": "5.0.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,json}": [
        "prettier --write",
        "git add"
      ],
      "*.md": [
        "prettier --write --parser markdown",
        "git add"
      ]
    },
    "ignore": [
      "package.json",
      "package-lock.json",
      "node_modules/**",
      "dist/**"
    ]
  }
}
